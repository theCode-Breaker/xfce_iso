#!/bin/bash
yad --title "XeroLinux Welcome" --form --columns=2 --width=480 --height=240 --text="Welcome to <b>XeroLinux</b> this will help get you started. Keep in mind that this app will be replaced after install with the post-install version." --image=$HOME/xero.png  \
--field="<b>Start XeroLinux Installer</b>":fbtn 'sudo -E /usr/bin/calamares' \
--field="<b>WMWareTools Resolution Fix</b>":fbtn "xfce4-terminal -e 'sudo systemctl enable --now vmtoolsd'" \
--field="<b>Change Display Resolution</b>":fbtn 'xfce4-display-settings' \
--field="<b>Start Installer Debug mode</b>":fbtn "xfce4-terminal -e 'sudo -E /usr/bin/calamares -D6'" \
--field="<b>Launch Partition Manager</b>":fbtn "sh -c '/usr/bin/gparted'" \
--field="<b>Check For System Updates</b>":fbtn "xfce4-terminal -e 'paru -Syyu --noconfirm'" \
--button=Exit:1
